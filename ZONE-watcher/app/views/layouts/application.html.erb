<!DOCTYPE html>
<html>
<head>
  <title>ZONEWatcher</title>
  <%= include_gon %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag params[:controller] %>
  <%= csrf_meta_tags %>
  <%= javascript_include_tag("/bootstrap/js/bootstrap.min.js")%>
  <%= stylesheet_link_tag("/bootstrap/css/bootstrap.min.css") %>
  <%= stylesheet_link_tag("/bootstrap/css/bootstrap-responsive.css") %>
  <%= stylesheet_link_tag("/bootstrap/css/zone-wp.css") %>
  <%= stylesheet_link_tag("/bootstrap/css/slate.css") %>
  <%= stylesheet_link_tag("/assets/tagit.css") %>
<script type="text/javascript" src="/jwplayer/jwplayer.js" ></script>
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="/">Zone - DEMO</a>
        <div class="nav-collapse collapse">
          <ul class="nav">
            <li class="active"><a href="/">Home</a></li>
            <li><a href="/sources">Sources List</a></li>
            <!--<li><a href="/twitter">See my twitter timeline!</a></li>-->
          </ul>
        </div>
        <%= render 'layouts/login' %>
      </div>
    </div>
    <div style="z-index: 10">
      <a href="http://www.zone-project.org/mailing-list/"><img style="position: absolute; top: 40px; right: 0; border: 0; z-index: 10" src="/imgs/follow_me.png" alt="Fork me on GitHub"></a>
    </div>
  </div>


  <div class="container">
      <%= render 'layouts/messages' %>
    <%= yield %>
  </div>

</body>
</html>