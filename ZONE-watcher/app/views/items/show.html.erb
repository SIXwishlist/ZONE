<%
   if @item.props["http://purl.org/rss/1.0/image"] != nil
     image=@item.props["http://purl.org/rss/1.0/image"][0].html_safe
   end
%>

<div class="row-fluid">
	<div class="span12">
		<% if image != nil  %>
			<% if image.end_with?("flv") || image.end_with?("mp4") %>
	            <div id="<%= image%>">
	                Loading the player...
	            </div>
	            <script type="text/javascript">
	                jwplayer("<%= image%>").setup({file: "<%= image%>",	width: "100%"});
	            </script>
			<%else%>
			    <img src="<%= image%>" class="img-polaroid span3 pull-left img-marged">
			<%end%>
		<%end%>
		<div class="row-fluid">
			<!--header news part -->
            <img src="<%= @item.getTypePicture%>" class="littleCircleImage" width=30 height=30>
            <a class="titleItem" target="_blank" href= "<%= @item.uri %>"><b><u><%= @item.props["http://purl.org/rss/1.0/title"][0]%></u> </b> </a>
            <span class="showFavorite hide"><i class="icon-share pointerMouse"></i></span>
            <span class="row-favorite btn-group hide">
                <%= render 'show_tool_bar', :item => @item %>
            </span>
			<i>
              <%=
                begin
                  date = DateTime.parse(@item.props["http://purl.org/rss/1.0/pubDate"][0])
                  date.strftime('Le %d/%m/%Y Ã  %H:%M')

                rescue
                end
              %>
            </i>
            <% if @item.uri.starts_with?('https://twitter.com') || @item.uri.starts_with?('http://twitter.com')  %>
            	<br/>
            	<i> Via <%= @item.props["http://zone-project.org/model/plugins/twitter#author"][0] %></i>
            <% end %>
            
            <!--content news part -->
            <div class="contentArticle">
				<%= if @item.props["http://purl.org/rss/1.0/description"] != nil
        			@item.props["http://purl.org/rss/1.0/description"][0].html_safe 
        		end %>
			</div>
			<div class="btn-toolbar">
				<% htmlval =""
				@item.props.each do |item|
                    item[1].each do |value|
                        filter = SearchFilter.new(:value =>  value)
                        if value.start_with?("http")
                          filter.uri = value
                        end
                        filter.prop = item[0]
                        #filter.save
                        #if filter.prop.starts_with? ZoneOntology::PLUGIN_EXTRACT_ARTICLES_CONTENT_RES
                        #    htmlval= filter.value
                        #end
                        linkval = getButtonForFilter(filter)
                        if !linkval then
                            next
                        end
                        %>

                        <div class="btn-group btn-group-label btn-wrap">
                            <%= linkval %>
                        </div>
                    <%end%>
                <%end%>
			</div>
			<div class="addtag pull-left" hidden>
				<div class="input-append span12">
					<input class="span8" type="text" placeholder="<%= t('items.newtag')%>">
					<button class="btn btn-success">
						<%= raw t 'newmodal.sources.add' %>
					</button>
				</div>
			</div>

          <!--footer news part with share buttons -->
			<div class="pull-right row-list">
                <%= render 'show_tool_bar', :item => @item %>
			</div>
		</div>
	</div>

    <!-- debug tool to print the tags ;) -->
	<div class="row-fluid">
		<div class="accordion" id="accordion-<%= @item.getUriHash %>" style="margin-bottom: 0px;">
			<div class="accordion-group borderLess">
				<div id="collapse-<%= @item.getUriHash%>" class="accordion-body collapse">
					<div class="accordion-inner" style="padding: 0px;">
						<table class="table table-striped">
							<% i=0; @item.props.each do |prop,values|
							values.each do |value|
							i=i+1
							%>
							<tr>
								<td><%= prop %></td>
								<td> <% if prop.starts_with? ZoneOntology::PLUGIN_EXTRACT_ARTICLES_CONTENT_RES %>
								<%= value %> <a href= "<%= @uri %>"> (...) </a> <% elsif (prop.starts_with? 'http://rdf.insee') || (prop.starts_with? 'http://www.dbpedia') %>
								<%= link_to value, "getOne?element="+value,:id => "elem"+i.to_s(), :remote => true %>
								<%= javascript_tag do %>
                                    $("#elem<%= i%>").bind("ajax:complete", function(et, e){
                                    $("#elem<%= i.to_s()%>").html(e.responseText); // insert content
                                    event.preventDefault(); // Prevent link from following its href
                                    });
								<%end%>
								<%elsif (value.starts_with? 'http://')%>
								<%= link_to value,value %>
								<%else%>
								<%= value %>
								<%end%> </td>
							</tr>
							<% end%>
							<%end%>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


<!-- really crap bug fix in order to load the js for each item with async items download -->
<script>
    $(document).ready(function() {

        //Waiting screen for the tag
        originalWaitingText = "<div class='infoPop'>"+getWaitingScreen()+"</div>"
        //Generation of the popover of the tag
        $(".label-tag").each(function() {
            var waitingScreen;
            if ($(this).attr("data-uri").indexOf("/search_filters?uri=http%3A%2F%2Fwww.dbpedia.org") === 0) {
                waitingScreen = getWaitingScreen();
                return $(this).popover({
                    title: getPopoverTitle($(this).html()),
                    content: originalWaitingText + getPopoverButton($(this)),
                    placement: "bottom",
                    trigger: "manual"
                });
            } else {
                return $(this).popover({
                    title: getPopoverTitle($(this).html()),
                    content: getPopoverButton($(this)),
                    placement: "bottom",
                    trigger: "manual"
                });
            }
        });




        $(".label-tag").on("click", function() {
            return false;
        });
        $('.label-tag').on("click", function() {
            if ($('.popover').is(':visible') && $('.titletag').html() === $(this).html()) {
                return;
            }
            if ($(this).attr("data-uri").indexOf("/search_filters?uri=http%3A%2F%2Fwww.dbpedia.org") === 0) {
                var popover = $(this).data('popover');
                errorText = "<div class='infoPop'>error</div>" + getPopoverButton($(this));
                if (popover.options.content !== (originalWaitingText + getPopoverButton($(this))) && popover.options.content !== errorText) {
                    return;
                }
                var item = $(this);
                return $.ajax({
                    url: item.attr("data-uri"),
                    timeout: 5000,
                    success: function(data) {
                        popover.options.content = "<div class='infoPop'>" + data + "</div>" + getPopoverButton($(this));
                        return $('.infoPop').html(data);
                    },
                    error: function() {
                        popover.options.content = errorText;
                        return $('.infoPop').html('error');
                    }
                });
            }
        });
    });

    function getPopoverButton(tag) {
        var name = tag.html();
        var uri = tag.attr('filter-uri');
        var btnBan, btnMust, btnOptionnal, tagContent;
        btnOptionnal = "<button type='button' class='btn btn-info span12 btnTag' onclick='addTag(\"opt\",\"" + name + "\",\"" + uri + "\");closePop()'>" + $("#titleOr").html() + "</button><br>";
        btnMust = "<button type='button' class='btn btn-success span12 btnTag paddingMust' onclick='addTag(\"must\",\"" + name + "\",\"" + uri + "\");closePop()'>" + $("#titleAnd").html() + "</button><br>";
        btnBan = "<button type='button' class='btn btn-danger span12 btnTag' onclick='addTag(\"no\",\"" + name + "\",\"" + uri + "\");closePop()'>" + $("#titleWithout").html() + "</button>";
        tagContent = "<hr><div class='row-fluid'><div class='span12 text-center'><b class='adding-info'>" + $("#titlePopover").html() + "</b></div></div><div class='row-fluid'><div class='span12'>" + btnMust + "</div></div><div class='row-fluid'><div class='span12'>" + btnOptionnal + "</div></div><div class='row-fluid'><div class='span12'>" + btnBan + "</div></div>";
        return tagContent;
    };

    function getPopoverTitle(tagHtml) {
        return "<span class='titletag'>" + tagHtml + "</span><i class='icon-trash pull-right pointerMouse' title='Delete' onclick='deleteTag(\"" + tagHtml + "\")'></i>";
    };

    function getWaitingScreen() {
        return "<div class='row-fluid'><i class='icon-refresh'></i> Loading ...</div>";
    };
</script>