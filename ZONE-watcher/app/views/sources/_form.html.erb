<%= form_for(@source, :html => { :class => "form-horizontal"} ) do |f| %>
  <% if @source.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@source.errors.count, "error") %> prohibited this source from being saved:</h2>

      <ul>
      <% @source.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :uri, class: "control-label" %>
    <div class="controls">
        <%= f.text_field :uri %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :label, class: "control-label" %>
    <div class="controls">
        <%= f.text_field :label %>
    </div>
  </div>


    <div class="control-group">
      <label for="ajax-combo" class="control-label">Lang:</label>
      <div class="controls">
        <div id="ajax-container-lang"></div>
      </div>
    </div>

    <div class="control-group">
      <label for="ajax-combo" class="control-label">Theme:</label>
      <div class="controls">
        <div id="ajax-container-theme"></div>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit 'Submit', :class => 'btn' %>
    </div>
<% end %>

<script>
    $.sexyCombo.create({
        name: "theme",
        id: "source_theme",
        container: "#ajax-container-theme",
        url: "/sources/themes.json?selected=<%=@source.theme%>",
        suffix: ""
    });
    $.sexyCombo.create({
        name: "lang",
        id: "ajax-container-lang",
        container: "#ajax-container-lang",
        url: "/sources/langs.json?selected=<%=@source.lang%>",
        suffix: ""

    });
</script>