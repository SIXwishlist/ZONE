<div class="row">
    <div class="span3"></div>
    <div class="span6 columns body-content">
        <div>
            <form action="/items">
                <fieldset class="search-zone">
                    <div class="clearfix">
                        <label class="text-center"><h1>What are you looking for?</h1></label>
                        <div class="input">
                            <ul id="search-form" class="fake-input" tabindex="1">
                                <% if @filters != nil && @filters.length > 0 %>
                                    <% @filters.each do |filter| %>
                                        <li><%= filter.get_search_button%></li>
                                    <% end %>
                                <% end %>
                            </ul>
                        </div>
                    </div>
                </fieldset>
                <div class="row">
                  <div class="span3">Only in your sources</div>
                  <div class="span2">
                    <div class="select-sources">
                      <a href="#" type="button" >
                        select sources
                      </a>
                    </div>



                </div>
              </div>
              <div id="sources-collapse">
                <fieldset >
                  <div class="clearfix">
                    <div class="input select-source-input" style="display:none">
                      <ul id="sources-list"  class="fake-input select-source-ul" tabindex="1">

                        <% if @sources != nil && @sources.length > 0 %>
                            <% @sources.each do |source| %>
                                <li><%= source.get_search_button%></li>
                            <% end %>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                </fieldset>
              </div>




                <div class="actions">
                    <button type="submit" class="btn btn-info btn-large btn-primary goButton">Let us know</button>
                </div>
                <% if @uriForItemsNumber != nil%>
                    <span class="items-count">(<a href= "<%=@uriForItemsNumber%>"><i class=" icon-refresh" id="number_items_wait"></i></a><span id='number_items_container'></span> items)</span>
                <%end%>
            </form>
        </div>
    </div>
    <div class="span3"></div>
</div>




