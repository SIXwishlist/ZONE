<div class="row-fluid">
	<div class="span12">
		<ul class="breadcrumb">
			<li>
				Sources (1/2)<span class="divider">/</span>
			</li>
			<li>
				Sources (2/2)<span class="divider">/</span>
			</li>
			<li>
				Filtrage (1/2)<span class="divider">/</span>
			</li>
			<li>
				Filtrage (2/2)<span class="divider">/</span>
			</li>
			<li>
				Résultats
			</li>
		</ul>
	</div>
</div>
<form action="/items" method="GET" id="formModal">
	<div class="row-fluid">
		<div class="tab-content">
			<div class="tab-pane active" id="sourcesFirst">
				<div class="row-fluid">
					<div class="span1"></div>
					<div class="span10">
						<h2>Sélectionner vos sources</h2>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span12">
						<div class="row-fluid">
							<div class="span1"></div>
							<div class="span2" id="imgTwitter">
								<img class="circleImage thumbnail accordion-toggle" src="/assets/foregroundTwitter.png" onclick="slideDown('#formTwitter');setAfter('#imgTwitter')"/>
							</div>
							<div class="span2"></div>
							<div class="span2" id="imgGoogle">
								<img class="circleImage thumbnail accordion-toggle" src="/assets/foregroundGoogleGray.png"/>
							</div>
							<div class="span2"></div>
							<div class="span2" id="imgRSS">
								<img class="circleImage thumbnail accordion-toggle" src="/assets/foregroundRSS.png" onclick="slideDown('#formRSS');setAfter('#imgRSS')"/>
							</div>
						</div>
						<div id="formTwitter" class="row-fluid form" style="display:none;">
							<div class="span1"></div>
							<div class="span10">
								<div class="contentTwitter" >
									<div class="formHeader">
										<div class="span1"></div>
										<b>Twitter</b>
									</div>
									<div class="formContent">
										<div class="row-fluid">
											<div class="span12 input-prepend">
												<div class="span1"></div>
												<span class="add-on">@</span>
												<input name="inputLogin" type="text" class="inputLogin span10" id="loginTwitter" placeholder="Login" onclick="$(this).prop('readonly',false);$('#searchTwitter').prop('readonly',true);$('#searchTwitter').val('');" onKeyPress="if (event.keyCode == 13){ addRowSourceTable('#formTwitter');return false;}">
											</div>
										</div>
										<div class="row-fluid">
											<div class="span12 input-prepend">
												<div class="span1"></div>
												<span class="add-on">#</span>
												<input name="inputSearch" type="text" class="inputSearch span10" id="searchTwitter" placeholder="Tag" readonly onclick="$(this).prop('readonly',false);$('#loginTwitter').prop('readonly',true);$('#loginTwitter').val('');" onKeyPress="if (event.keyCode == 13){ addRowSourceTable('#formTwitter');return false;}" />
											</div>
										</div>
										<div class="row-fluid">
											<div class="span12">
												<button class="pull-right btn btn-info" type="button" onclick="addRowSourceTable('#formTwitter');return false;">
													<%= raw t 'semanticsource.button.addone' %>
												</button>
											</div>
										</div>
										<div class="row-fluid">
											<div class="span12">
												<hr>
											</div>
										</div>
										<div class="row-fluid">
											<div class="span5"></div>
											<div class="span2">
												<button class="btn btn-success span12" type="button" onclick="addAllSourceTable('formTwitter');return false;">
													<%= raw t 'semanticsource.button.addall' %>
												</button>
											</div>
										</div>
										<div class="row-fluid">
											<div class="span12">
												<div class="span1"></div>
												<b>Vos choix</b>
											</div>
										</div>
										<div class="row-fluid">
											<div class="span1"></div>
											<div class="span10 well"></div>
										</div>
									</div>
									<!--formContent twiiter-->
								</div>
							</div>
						</div>
						<div id="formRSS" class="row-fluid form" style="display:none;">
							<div class="span1"></div>
							<div class="span10">
								<div class="contentRSS">
									<div class="formHeader">
										<div class="span1"></div>
										<b>RSS</b>
									</div>
									<div class="formContent">
										<div class="row-fluid">
											<div class="span12 input-prepend">
												<div class="span1"></div>
												<span class="add-on"><i class="icon-white icon-search"></i></span>
												<input name="inputSearch" type="text" class="inputSearch span10" placeholder="URL" onKeyPress="if (event.keyCode == 13){addRowSourceTable('#formRSS');return false;}">
											</div>
										</div>
										<div class="row-fluid">
											<div class="span1"></div>
											<div class="span10">
												<button class="pull-right btn btn-info" type="button" onclick="addRowSourceTable('#formRSS');return false;">
													<%= raw t 'semanticsource.button.addone' %>
												</button>
											</div>
										</div>
										<div class="row-fluid">
											<div class="span12">
												<hr>
											</div>
										</div>
										<div class="row-fluid">
											<div class="span5"></div>
											<div class="span2">
												<button class="btn btn-success span12" type="button" onclick="addAllSourceTable('formRSS');return false;">
													<%= raw t 'semanticsource.button.addall' %>
												</button>
											</div>
										</div>
										<div class="row-fluid">
											<div class="span12">
												<div class="span1"></div>
												<b>Vos choix</b>
											</div>
										</div>
										<div class="row-fluid">
											<div class="span1"></div>
											<div class="span10 well"></div>
										</div>
									</div>
									<!--formContent twiiter-->
								</div>
							</div>
						</div>
					</div><!--span12 -->
				</div><!--row-fluid -->
				<hr>
				<div class="row-fluid">
					<div class="span4"></div>
					<div class="span4">
						<button class="btn btn-success">
							<h3>Valider et passer à la suite</h3>
						</button>
					</div>
				</div>
			</div><!--tab-pane -->
			<div class="tab-pane" id="sourcesSecond"></div>
			<div class="tab-pane" id="FilteringFirst"></div>
			<div class="tab-pane" id="FilteringSecond"></div>
		</div>
	</div>
</form>
